@model Category

<div class="container mx-75">
    <h1 class="text-center"> <a href="../products/all">Products</a> | <a href="../categories/all">Categories</a></h1>

    <div class="text-center">
        <h2>@Model.Name</h2>
        <div class="row mt-5">
            <div class="col-md">
                <table class="table">
                    <tr>
                        <th scope="col">
                            <h5 class="col">Products</h5>
                        </th>
                    </tr>

                    @foreach (var Cat in Model.CatagoryAss)
                    {
                        <tr>
                            <td class="card-text">@Cat.product.Name</td>
                        </tr>
                    }
                </table>
            </div>
            <div class="col-md">
                <h5 class="col">Add Product:</h5>
                <form asp-action="addproduct" asp-controller="Categories" method="POST">
                    <input type="hidden" name="catId" value="@Model.CategoryId">
                    <select name="Id" class="form-control mb-3">
                        <option value="0"></option>
                        @foreach (var product in ViewBag.UnassociatedProducts)
                        {
                            <option value="@product.ProductId">@product.Name</option>
                        }
                    </select>
                    <button type="submit" class="btn btn-outline-dark btn-block">ADD PRODUCT</button>

                </form>
            </div>
        </div>





    </div>

</div>