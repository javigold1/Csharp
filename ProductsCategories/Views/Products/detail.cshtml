@model Product

<div class="container mx-75">
    <h1 class="text-center"> <a href="../products/all">Products</a> | <a href="../categories/all">Categories</a></h1>

    <div class="text-center">
        <h2>@Model.Name</h2>
        <div class="row mt-5">
            <div class="col-md">
                <table class="table">
                    <tr>
                        <th scope="col">Categories</th>
                    </tr>

                    @foreach (var Cat in Model.ProductCategories)
                    {
                        <tr>
                            <td class="card-text">@Cat.category.Name</td>
                        </tr>
                    }
                </table>
            </div>
            <div class="col-md">
                <h5 class="col">Add Category:</h5>
                <form asp-action="addcategory" asp-controller="Products" method="POST">
                    <input type="hidden" name="prodId" value="@Model.ProductId">
                    <select name="Id" class="form-control mb-3">
                        <option value="0"></option>
                        @foreach (var category in ViewBag.UnassociatedCategories)
                        {
                            <option value="@category.CategoryId">@category.Name</option>
                        }
                    </select>
                    <button type="submit" class="btn btn-outline-dark btn-block">ADD CATEGORY</button>
                    @* @Html.Raw(TempData["alertMessage"]) *@
                </form>
            </div>
        </div>





    </div>

</div>